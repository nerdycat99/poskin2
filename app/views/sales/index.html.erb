<div class="p-12 mx-auto text-gray-800 max-w-7xl">
  <h2>Sales</h2>
</div>
<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">
  <!--Card 1-->
  <div class="rounded overflow-hidden shadow-lg content-center">
    <!-- <img class="w-full" src="/mountain.jpg" alt="Mountain"> -->
    <div class="px-6 py-4">
      <div class="mb-4 text-3xl font-black">Register Sale</div>
      <p class="text-gray-700 text-base">
        Add Products to Sale and Print Receipt
      </p>
    </div>
    <div class="px-6 pt-4 pb-2">

      <%= link_to '<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold w-1/3 lg:w-full py-2">Continue</button>'.html_safe, new_order_path, data: {turbo_method: :get} %>

    </div>
  </div>
  <!--Card 2-->
  <div class="rounded overflow-hidden shadow-lg">
    <!-- <img class="w-full" src="/river.jpg" alt="River"> -->
    <div class="px-6 py-4">
      <div class="mb-4 text-3xl font-black">View Sales</div>
      <p class="text-gray-700 text-base">
        View existing sales
      </p>
    </div>
    <div class="px-6 pt-4 pb-2">
      <%= link_to '<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold w-1/3 lg:w-full py-2">Continue</button>'.html_safe, all_sales_path %>
    </div>
  </div>
  <!--Card 3-->
  <div class="rounded overflow-hidden shadow-lg">
    <!-- <img class="w-full" src="/river.jpg" alt="River"> -->
    <div class="px-6 py-4">
      <div class="mb-4 text-3xl font-black">Customers</div>
      <p class="text-gray-700 text-base">
        Find and Update Customers Details
      </p>
    </div>
    <div class="px-6 pt-4 pb-2">
      <%= link_to '<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold w-1/3 lg:w-full py-2">Continue</button>'.html_safe, customers_path %>
    </div>
  </div>
</div>