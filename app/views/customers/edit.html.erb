<main class="p-12 mx-auto text-gray-800 max-w-7xl">
  <h2>Edit Customer Details</h2>
  <% if @customer.errors.any? %>
    <% @customer.errors.full_messages.each do |message|%>
       <p class="text-red-700 text-base"><%= message %> </p>
    <%end%>
    <br />
  <%end%>
  <%= simple_form_for @customer, builder: TailwindFormBuilder, class: "mt-6", url: customer_path do |f| %>
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, placeholder: 'optional' %>
    <br />
    <%= f.label "Last Email" %>
    <%= f.text_field :last_name, placeholder: 'optional' %>
    <br />
    <%= f.label "Email Address" %>
    <%= f.text_field :email_address, placeholder: 'customer@place.com' %>
    <br />
    <%= f.label "Phone Number" %>
    <%= f.text_field :phone_number, placeholder: 'optional' %>
    <br />
    <br />
    <%= f.submit_button "Update" %>
    <%= link_to "Cancel", customers_path, class: "btn btn-outline-secondary" %>
  <% end %>
</main>