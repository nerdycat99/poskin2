<div class="p-10">
  <h2>Suppliers</h2>
  <br />
  <div class="accordion" id="accordionExample">
    <% @suppliers.each do |supplier| %>
      <div class="accordion-item">
        <% collapse_target = "#collapse#{supplier.id}" %>
        <% collapse_id = "collapse#{supplier.id}" %>
        <% heading_id = "heading#{supplier.id}" %>
        <h2 class="accordion-header" id= <%= heading_id %>>
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=<%= collapse_target %> aria-expanded="false" aria-controls=<%= collapse_id %>>
            <h5>
              <%= supplier.name %><br />
              <%= supplier.email %>
            </h5>
          </button>
        </h2>
        <div id=<%= collapse_id %> class="accordion-collapse collapse visible" aria-labelledby=<%= heading_id %> data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <table style="width: 100%">
              <colgroup>
                 <col span="1" style="width: 30%;">
                 <col span="1" style="width: 10%;">
                 <col span="1" style="width: 20%;">
                 <col span="1" style="width: 10%;">
                 <col span="1" style="width: 20%;">
              </colgroup>
              <thead>
                <tr>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Notes</th>
                  <th>Tax No</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= supplier.display_address %></td>
                  <td><%= supplier.phone %></td>
                  <td><%= supplier.notes %></td>
                  <% if supplier.registered_for_sales_tax? %>
                    <td><%= supplier.abn_number || "Not Recorded" %></td>
                  <% else %>
                    <td>Not Tax Registered</td>
                  <% end %>
                  <td>
                    <%= link_to "Edit Supplier", edit_supplier_path(supplier.id), class: "btn btn-primary" %>
                    <%= link_to "Remove Supplier", root_path, class: "btn btn-outline-secondary" %>
                  </td>
                </tr>
              </tbody>
              <% if @suppliers.count > 2 %>
                <tr><td>&nbsp;</td></tr><tr><td>&nbsp;</td></tr><tr><td>&nbsp;</td></tr><tr><td>&nbsp;</td></tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    <br />

  </div>
  <footer class="bg-white text-center text-lg-start fixed-bottom">
    <div class="pt-6 pl-10 pb-6 text-gray-800 max-w-7xl">
      <row>
        <%= link_to "Create New Supplier", new_supplier_path, class: "btn btn-primary" %>
        <%= link_to "Back", catalogue_index_path, class: "btn btn-outline-secondary" %>
      </row>
    </div>
  </footer>
</div>
